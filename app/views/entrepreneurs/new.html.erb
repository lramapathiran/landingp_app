<div class="row">
<div class="col-lg-6 col-lg-offset-3">

<h4>Parlez nous de vôtre activité<h4>

<br>
<br>

<%= form_for @entrepreneur, html: {class: "form-horizontal", role: "form"} do |f| %>

<div class="form-group">
<%= label_tag :last_name, "Nom", class: "col-lg-2 control-label" %>
	<div class="col-lg-10">
		<%= f.text_field :last_name, class: "form-control", required: "required" %>
	</div>
</div>

<div class="form-group">
<%= label_tag :first_name, "Prénom", class: "col-lg-2 control-label" %>
	<div class="col-lg-10">
		<%= f.text_field :first_name, class: "form-control", required: "required" %>
	</div>
</div>

<div class="form-group">
	<%= label_tag :email, "Email", class: "col-lg-2 control-label" %>
	<div class="col-lg-10">
		<%= f.email_field :email, class: "form-control", required: "required" %>
	</div>
</div>

<div class="form-group">
	<%= label_tag :phone, "Adresse", class: "col-lg-2 control-label" %>
	<div class="col-lg-10">
		<%= f.text_field :phone, class: "form-control", required: "required" %>	
	</div>
</div>

<div class="form-group">
	<%= label_tag :address, "Adresse", class: "col-lg-2 control-label" %>
	<div class="col-lg-10">
		<%= f.text_field :address, class: "form-control", required: "required" %>	
	</div>
</div>

<div class="form-group">
	<%= label_tag :description, "Présentation", class: "col-lg-2 control-label" %>
	<div class="col-lg-10">
		<%= f.text_field :description, class: "form-control", required: "required" %>	
	</div>
</div>

<div class="form-group text-center">
	<%= f.submit %>

</div>
<% end %>
</div>
</div>